<h1>New Product</h1>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>
<div class="go-here">

</div>
<script type="text/javascript" charset="utf-8">
  $(function () {
    $('form').submit(function(e) {
      e.preventDefault()
      var values = $(this).serialize()
      var posting = $.post('/products', values)

      posting.done(function(data) {
        $(".go-here").text(`${data.name} <br> ${data.price}`)
      })
    })
  })
</script>
